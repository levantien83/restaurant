<nav class="navbar navbar-dark bg-inverse">
  <ul class="nav navbar-nav">
    <li class="nav-item <%= 'active' if current_page?(root_path) %>">
      <%= link_to 'Home', root_path, class: "nav-link" %>
    </li>
    <li class="nav-item <%= 'active' if current_page?(menu_path) %>">
      <%= link_to 'Menu', menu_path, class: "nav-link" %>      
    </li>
    <li class="nav-item <%= 'active' if current_page?(contact_us_path) %>">
      <%= link_to 'Contact Us', contact_us_path, class: "nav-link" %>
    </li>
  </ul>

  <% if current_page?(menu_path) || current_page?(food_items_path) %>
    <div class="nav navbar-nav" align="right">
      <form class="form-inline">
        <div class="form-group">            
          <%= form_tag root_path, :method => 'get' do %>
            <%= text_field_tag :search, params[:search], class: 'form-control form-control-sm' %>
            <%= submit_tag "Search", class: 'btn btn-info-outline btn-sm' %>
          <% end %>
        </div>
      </form>
    </div>
  <% end -%>

</nav>